<script>
    /**
    * Retourne un message de confirmation 
    * Utilisé pour valider certaines actions irréversible (par exemple l'envoi des réponses pour un élève)
    */
    function confirm_dialog(message)
    {
        return confirm("Etes-vous sur? \n"+ message + "\nVous ne pourrez pas revenir en arrière.");
    }
</script>